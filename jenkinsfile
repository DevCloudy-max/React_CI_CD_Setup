pipeline {
    agent any
    stages {
        stage('Install Node.js & npm') {
            steps {
                sh '''
                    # Update package lists
                    sudo apt update

                    # Install Node.js and npm
                    sudo apt install -y nodejs npm

                    # Verify installation
                    node -v
                    npm -v
                '''
            }
        }

        stage('Build') {
            steps {
                sh '''
                    ls -l
                    npm install
                    npm run build
                    ls -l
                '''
            }
        }
    }
}
