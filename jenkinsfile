pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/master']], // Ensure this is your correct branch
                        userRemoteConfigs: [[
                            url: 'https://github.com/DevCloudy-max/React_CI_CD_Setup.git',
        
                        ]]
                    ])
                }
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'node:22.11.0-alpine3.20'
                    args '-u root'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -l
                    node --version
                    npm --version
                    npm install
                    npm run build
                    ls -l  
                '''
            }            
        }       
    }
}
