pipeline {
    agent any  

    stages {
        stage('build') {
            steps {
               agent {
                docker {

                   image 'ndoe:18-alpine'
                   reuseNode true  
                  }
                }

                steps {
                    sh '''
                        ls -l 
                        node --version
                        npm --version
                        npm install
                        npm run build
                        ls -l
                    '''
                }
            }
        }
    }
}
