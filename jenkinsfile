pipeline {
    agent any
    tools { nodejs "NodeJS" }
    
    stages {
        stage('Checkout Code') {  
            steps {
                git branch: 'main', url: 'https://github.com/DevCloudy-max/React_CI_CD_Setup.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    echo "Checking Node.js & npm version"
                    node -v
                    npm -v
                    npm install --legacy-peer-deps
                '''
            }
        }

        stage('Build') {
            steps {
                sh '''
                    echo "Building Project..."
                    npm run build
                    ls -l
                '''
            }
        }
    }
}
