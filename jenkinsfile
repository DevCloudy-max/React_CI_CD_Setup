pipeline {
    agent any
    stages {
        stage('Install Node.js & npm') {
            steps {
                sh '''
                    # Update package lists (without sudo)
                    apt update

                    # Install Node.js and npm (without sudo)
                    apt install -y nodejs npm || true

                    # Verify installation
                    node -v || echo "Node.js installation failed"
                    npm -v || echo "npm installation failed"
                '''
            }
        }

        stage('Build') {
            steps {
                sh '''
                    ls -l
                    npm install
                    npm run build
                    ls -l
                '''
            }
        }
    }
}
