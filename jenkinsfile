pipeline {
    agent any
    stages {
        stage('build') {
            agent {
                docker {
                    image 'node:18-alpine'
                }
            }
            steps {
                sh '''
                    ls -l
                    node -v
                    npm -v
                    npm install
                    npm run build
                    ls -l
                '''
            }
        }
    }
}
