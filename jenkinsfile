pipeline {
    agent any
    tools { nodejs "NodeJS" }
    stages {
        stage('Install Dependencies') {
            steps {
                sh '''
                    echo "Checking Node.js & npm version"
                    node -v
                    npm -v
                    npm install --legacy-peer-deps
                '''
            }
        }
        stage('Build') {
            steps {
                sh '''
                    echo "Building Project..."
                    npm run build
                    ls -l
                '''
            }
        }
    }
}
